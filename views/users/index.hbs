 <section>
          <div class="container mt-3 ">

        <div class="row ">
            {{#each product}}
            

            <div class=" col-md-3 col-sm-6 p-3 ">


                <div class="card text-center" style="width: 17rem; height:36rem">
                    <img src="/images/{{this._id}}.jpg" class=" mx-auto" width="200px" height="220px" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <p class="card-text"><b> Rs {{this.price}}</b> </p>
                            
                        <a href="/Add-Products-Cart/{{_id}}" class="btn btn-primary">Add to Cart</a>
                    </div>
                </div>

            </div>

            {{/each}}
           

            </div>



        </div>
        </div>

    </section>